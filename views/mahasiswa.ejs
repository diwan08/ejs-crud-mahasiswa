<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <title>Daftar Mahasiswa</title>
</head>
<body>

  <div class="container mt-5">
    <h1>Daftar Mahasiswa</h1>
    <a href="/mahasiswa/tambah" class="btn btn-success">Tambah Mahasiswa</a>

    <table class="table table-hover mt-2">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nama</th>
          <th scope="col">NIM</th>
          <th scope="col">Prodi</th>
          <th scope="col">Status</th>
          <th scope="col">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (mahasiswa.length === 0) { %>
          <tr>
            <td colspan="6" class="text-center">Data mahasiswa masih kosong</td>
          </tr>
        <% } else { %>
          <% mahasiswa.forEach(function(d, i) { %>
            <tr>
              <th scope="row"><%= i+1 %></th>
              <td><%= d.nama %></td>
              <td><%= d.nim %></td>
              <td><%= d.prodi %></td>
              <td>
                <% if (d.status == 1) { %>
                  <span class="badge text-bg-primary">Aktif</span>
                <% } else { %>
                    <span class="badge text-bg-warning">Tidak Aktif</span>
                <% } %>
              </td>
              <td>
                <a href="/mahasiswa/detail/<%= d.id %>" class="badge text-bg-info">detail</a>
                <a href="/mahasiswa/edit/<%= d.id %>" class="badge text-bg-primary">edit</a>
                <a href="/mahasiswa/delete/<%= d.id %>" class="badge text-bg-danger">delete</a>
              </td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="/js/bootstrap.min.js"></script>
</body>
</html>